{
  "name": "www-readability",
  "private": true,
  "dependencies": {
    "automated-readability": "^1.0.0",
    "coleman-liau": "^1.0.0",
    "compute-mean": "^3.0.0",
    "compute-median": "^2.0.0",
    "compute-mode": "^1.0.0",
    "dale-chall": "^1.0.0",
    "dale-chall-formula": "^1.0.0",
    "debounce": "^1.0.0",
    "flesch": "^1.0.0",
    "global": "^4.3.1",
    "gunning-fog": "^1.0.1",
    "lerp": "^1.0.3",
    "nlcst-normalize": "^2.1.0",
    "nlcst-to-string": "^2.0.0",
    "retext-english": "^3.0.0",
    "smog-formula": "^1.0.0",
    "spache": "^1.1.0",
    "spache-formula": "^1.0.0",
    "syllable": "^2.0.0",
    "unified": "^6.0.0",
    "unist-util-visit": "^1.1.1",
    "unlerp": "^1.0.1",
    "virtual-dom": "^2.1.1",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "bundle-collapser": "^1.2.1",
    "cssnano": "^3.10.0",
    "esmangle": "^1.0.1",
    "postcss-cli": "^4.1.0",
    "rehype-cli": "^4.0.0",
    "rehype-preset-minify": "^2.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "xo": "^0.18.1"
  },
  "scripts": {
    "build:js": "browserify -p bundle-collapser/plugin src/index.js | esmangle > dest/index.js",
    "build:css": "postcss src/index.css > dest/index.css",
    "build:html": "rehype -u preset-minify src/index.html -o dest",
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "lint": "xo && stylelint src/index.css",
    "test": "npm run build && npm run lint"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "capitalized-comments": "off"
    },
    "ignore": [
      "dest"
    ]
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
